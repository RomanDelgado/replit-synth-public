modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MIDI Synthesizer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MIDI Synthesizer with GUI"

[[workflows.workflow]]
name = "MIDI Synthesizer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python synth.py"

[[workflows.workflow]]
name = "MIDI Synthesizer with GUI"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python synthesizer.py"

[deployment]
run = ["sh", "-c", "python synth.py"]
